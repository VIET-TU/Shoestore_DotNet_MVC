
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

@model User

<div class=" card card-primary">
    <div class="box ml-2 mt-4">
        <h3>Create new user</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="Dashboard" asp-action="CreateUser" method="post">
        <div class="card-body">
             <div class="form-group">
                <label for="title">Frist name</label>
                <input asp-for="fristName" type="text" class="form-control" id="title" >
                <span asp-validation-for="fristName" class="text-danger "></span>

            </div>

             <div class="form-group">
                <label for="title">Last name</label>
                <input asp-for="lastName" type="text" class="form-control" id="title" >
                <span asp-validation-for="lastName" class="text-danger "></span>

            </div>

              <div class="form-group">
                <label for="title">Email</label>
                <input asp-for="email" type="text" class="form-control" id="title" >
                <span asp-validation-for="email" class="text-danger "></span>

            </div>

            <div class="form-group">
                <label for="Dectiption">Address</label>
                <textarea asp-for="address" rows="4"  class="form-control" id="Dectiption" > </textarea>
                <span asp-validation-for="address" class="text-danger "></span>

            </div>

            <div class="form-group">
                <label for="Price">Password</label>
                <input asp-for="password" type="password" class="form-control" id="Price" >
                <span asp-validation-for="password" class="text-danger "></span>

            </div>

           <div class="form-group">
                <label for="Category">Role</label>
                <select asp-for="RoleId" class="custom-select mr-sm-2"
                        asp-items="@ViewBag.Role"></select>
            </div>

           

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>


