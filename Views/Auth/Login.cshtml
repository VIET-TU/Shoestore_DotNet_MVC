@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Login


<section class="h-100 gradient-form min-vh-100 d-flex flex-row align-items-center"
		 style="background-color: #eee">
	<div class="container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-xl-10">
				<div class="card rounded-3 text-black">
					<div class="row g-0">
						<div class="col-lg-6">
							<div class="card-body p-md-5 mx-md-4">
								<div class="text-center">
									<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
										 style="width: 185px"
										 alt="logo" />
									<h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
								</div>

								<form asp-controller="Auth" asp-action="Login" method="post">
									<p>Please login to your account</p>

									<div class="form-outline mb-4">
										<input type="email"
											   id="form2Example11"
											   class="form-control"
											   asp-for="email"
											   placeholder="Phone number or email address" />
										<span asp-validation-for="email" class="text-danger"></span>

									</div>

									<div class="form-outline mb-4">
										<input type="password"
											   id="form2Example22"
											   placeholder="password"
											   asp-for="password"
											   class="form-control" />
										<span asp-validation-for="password" class="text-danger"></span>

									</div>

									<div class="text-center d-flex gap-3 align-items-center justify-content-center pt-1 mb-5 pb-1">
										<button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
												type="submit">
											Log in
										</button>
										<a class="text-muted" href="#!">Forgot password?</a>
									</div>

									<div class="d-flex gap-3 align-items-center justify-content-center pb-4">
										<p class="mb-0 mr-2">Don't have an account?</p>
										<a type="button" asp-controller="Auth" asp-action="Register" class="btn btn-outline-danger">Create new</a>
									</div>
								</form>
							</div>
						</div>
						<div class="col-lg-6 d-flex  align-items-center gradient-custom-2 bg-success">
							<div class="text-white px-3 py-4 p-md-5 mx-md-4">
								<h4 class="mb-4"> </h4>
								<p class="small mb-0">
									Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
									tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
									quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
									consequat.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />

	}
}

